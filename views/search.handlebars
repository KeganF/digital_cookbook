{{!=============================search.handlebars================================}}
{{> nav this }}
{{> search_area }}

{{!-- Search Results --}}
<div class="container mt-3 mb-3">
    {{#if results}}
        <h4>Showing results for "{{search}}":</h4>
    {{/if}}
    <div class="mt-3 d-flex flex-wrap justify-content-center" style="gap:1rem;">
    {{#each results}}
        {{> recipe_card recipe}}
    {{/each}}
    </div>
</div>
{{!=============================search.handlebars================================}}