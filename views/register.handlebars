{{!-----------------------------register.handlebars------------------------------}}
<div class="d-flex align-items-center justify-content-center shadow-lg gradient-background" style="min-height:100vh;">
    <div class="card p-4">
        <h1 class="text-center">Register</h1>
        <form class="d-flex flex-column" style="gap:0.5rem;">
            <div class="error"></div>
            <div>
                <label for="username">Username</label>
                <input class="form-control" type="text" id="username" required />
            </div>
            <div>
                <label for="password">Password</label>
                <input class="form-control" type="password" id="password" required />
            </div>
            <input class="btn btn-primary mt-2" type="submit" value="Register">
        </form>
        <a href="/login">Already have an account? Login here!</a>
    </div>
</div>

<script src="./js/register.js"></script>
{{!------------------------------------------------------------------------------}}